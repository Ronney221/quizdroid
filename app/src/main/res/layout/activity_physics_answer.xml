<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhysicsAnswerActivity">

    <TextView
        android:id="@+id/panswerGiven"
        android:layout_width="210dp"
        android:layout_height="62dp"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/pcorrectText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pcorrectText"
        android:layout_width="194dp"
        android:layout_height="50dp"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/prunningTotal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panswerGiven" />

    <TextView
        android:id="@+id/prunningTotal"
        android:layout_width="181dp"
        android:layout_height="50dp"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/pbutton6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pcorrectText" />

    <Button
        android:id="@+id/pbutton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINISH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prunningTotal" />
</android.support.constraint.ConstraintLayout>