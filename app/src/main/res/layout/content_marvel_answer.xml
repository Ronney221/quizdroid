<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MarvelAnswerActivity"
    tools:showIn="@layout/activity_marvel_answer">

    <TextView
        android:id="@+id/manswerGiven"
        android:layout_width="210dp"
        android:layout_height="62dp"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/mcorrectText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mcorrectText"
        android:layout_width="194dp"
        android:layout_height="50dp"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/mrunningTotal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manswerGiven" />

    <TextView
        android:id="@+id/mrunningTotal"
        android:layout_width="181dp"
        android:layout_height="50dp"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/mbutton6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mcorrectText" />

    <Button
        android:id="@+id/mbutton6"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="FINISH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mrunningTotal" />

</android.support.constraint.ConstraintLayout>